---
import "../styles/tailwind.css";
import { Image } from "astro:assets";
import applicationPicture from "../assets/img/application-picture.png";
import { Tooltips } from "astro-tooltips";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Deckblatt</title>
        <link
            rel="preconnect"
            href="https://fonts.googleapis.com"
            rel="noopener noreferrer"
        />
        <link
            rel="preconnect"
            href="https://fonts.gstatic.com"
            rel="noopener noreferrer"
            crossorigin
        />
        <link
            href="https://fonts.googleapis.com/css2?family=MuseoModerno:ital,wght@0,100..900;1,100..900&display=swap"
            rel="stylesheet"
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
            rel="stylesheet"
        />
        <Tooltips interactive={false} data-tooltip-placement="left" />
    </head>
    <body
        class="grid min-h-screen place-items-center bg-gray-400 print:min-h-0"
    >
        <main
            class="m-4 h-[297mm] w-[210mm] overflow-hidden rounded-md bg-white shadow-lg print:m-0 print:h-screen print:w-screen print:rounded-none print:shadow-none"
        >
            <!-- Oberer Bereich mit zwei Balken (dunkel & hell) -->
            <div class="relative h-[80mm] w-full">
                <!-- Dunkler Balken -->
                <div
                    class="absolute top-[60mm] left-0 w-full h-[40mm] bg-primary"
                >
                </div>
                <!-- Hellerer Balken -->
                <div
                    class="absolute top-[100mm] left-0 w-full h-[40mm] bg-gray-200"
                >
                </div>

                <!-- Bewerbungsfoto -->
                <div
                    class="absolute top-[90mm] left-[10mm] flex items-center justify-center"
                >
                    <a
                        href="https://github.com/Florian-Cywinski"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <Image
                            src={applicationPicture}
                            alt="Application picture"
                            class="application-picture-cover"
                        />
                    </a>
                </div>

                <!-- Name + Position (rechts oben) -->
                <div
                    class="absolute top-[82mm] left-[75mm] flex flex-col items-start"
                >
                    <h1 class="text-secondary font-light text-5xl mb-8">
                        Vorname Nachname
                    </h1>
                    <h2 class="text-primary font-extralight text-3xl">
                        Bewerbung als Projektleiter
                    </h2>
                </div>

                <!-- Unterer Bereich mit Kontaktdaten (links) und Anlagen (rechts) -->
                <div
                    class="absolute top-[190mm] left-[30mm] flex justify-between"
                >
                    <!-- Kontaktdaten -->
                    <div>
                        <h3 class="font-bold text-primary mb-2">
                            Kontaktdaten:
                        </h3>
                        <p class="text-sm leading-tight">
                            Hauptstra√üe 11<br />
                            10411 Berlin
                        </p>
                        <p class="text-sm mt-2 leading-tight">
                            Telefon: 0176/123456789<br />
                            E-Mail: vorname@nachname.de
                        </p>
                    </div>

                    <!-- Anlagen -->
                    <div class="ml-48">
                        <h3 class="font-bold text-primary mb-2">Anlagen:</h3>
                        <ul class="list-disc list-inside text-sm">
                            <li>Anschreiben</li>
                            <li>Lebenslauf</li>
                            <li>Zeugnisse</li>
                        </ul>
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>
